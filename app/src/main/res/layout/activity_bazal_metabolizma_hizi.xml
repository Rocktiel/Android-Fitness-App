<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bazal_metabolizma_hizi"
    android:background="@drawable/arka4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/aa"
        android:text="Gender :"
        android:textColor="#282828"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/male"
        android:textColor="#5F6263"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="120dp"
        android:text="Male"
        android:textSize="15sp"
        android:fontFamily="@font/aa"/>

    <CheckBox
        android:id="@+id/female"
        android:textColor="#5F6263"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="150dp"
        android:text="Female"
        android:textSize="15sp"
        android:fontFamily="@font/aa"/>

    <TextView
        android:textColor="#282828"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="250dp"
        android:text="Age :"
        android:textSize="20sp"
        android:fontFamily="@font/aa"/>

    <EditText
        android:id="@+id/ageeeeeee"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="240dp"
        android:inputType="number"
        android:background="@drawable/tasarim2"
        android:textColor="#282828"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>

    <TextView
        android:textColor="#282828"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="355dp"
        android:text="Height :"
        android:textSize="20sp"
        android:fontFamily="@font/aa"/>

    <EditText
        android:id="@+id/heightttttttt"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="345dp"
        android:inputType="number"
        android:background="@drawable/tasarim2"
        android:textColor="#282828"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="460dp"
        android:fontFamily="@font/aa"
        android:text="Weight :"
        android:textColor="#282828"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/weightttttttt"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="450dp"
        android:inputType="number"
        android:background="@drawable/tasarim2"
        android:textColor="#282828"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/BazalMetabolizmaHızı"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="555dp"
        android:background="@drawable/tasarim1"
        android:paddingHorizontal="15dp"
        android:text="Calculate" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="660dp"
        android:background="@drawable/tasarim2"
        android:textColor="#282828"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="670dp"
        android:fontFamily="@font/aa"
        android:text="Result :"
        android:textColor="#282828"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/baslik_tasarim">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="BASAL METABOLISM RATE"
            android:textColor="#282828" />
    </RelativeLayout>


</RelativeLayout>