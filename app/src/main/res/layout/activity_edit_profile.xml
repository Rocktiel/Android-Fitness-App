<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Profile"
    android:background="@drawable/profilarka">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/resim1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#AEB6B9"
        android:src="@drawable/baseline_person_24"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp" />

    <EditText
        android:id="@+id/username"
        android:textColor="#282828"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="@font/aa"
        android:background="@drawable/edit_text_tasarim"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="320dp"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="#B0B8BB"
        android:fontFamily="@font/aa"/>

    <EditText
        android:id="@+id/name"
        android:textColor="#282828"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="@font/aa"
        android:background="@drawable/edit_text_tasarim"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/resim2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#AEB6B9"
        app:strokeWidth="3dp"
        app:strokeColor="@color/white"
        android:src="@drawable/baseline_drive_file_rename_outline_24"
        app:shapeAppearanceOverlay="@style/circular"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="420dp"
        android:text="Surname"
        android:textSize="20sp"
        android:textColor="#B0B8BB"
        android:fontFamily="@font/aa"/>

    <EditText
        android:id="@+id/surname"
        android:textColor="#282828"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="450dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="@font/aa"
        android:background="@drawable/edit_text_tasarim"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/resim3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#AEB6B9"
        app:strokeWidth="3dp"
        app:strokeColor="@color/white"
        android:src="@drawable/baseline_drive_file_rename_outline_24"
        app:shapeAppearanceOverlay="@style/circular"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="520dp"
        android:text="Age"
        android:textColor="#B0B8BB"
        android:textSize="20sp"
        android:fontFamily="@font/aa"/>

    <EditText
        android:id="@+id/age"
        android:textColor="#282828"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="550dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="@font/aa"
        android:background="@drawable/edit_text_tasarim"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/resim4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#AEB6B9"
        app:strokeWidth="3dp"
        app:strokeColor="@color/white"
        android:src="@drawable/baseline_calendar_month_24"
        app:shapeAppearanceOverlay="@style/circular"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="520dp"
        android:fontFamily="@font/aa"
        android:text="Weight"
        android:textColor="#B0B8BB"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/weight"
        android:textColor="#282828"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="550dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="@font/aa"
        android:background="@drawable/edit_text_tasarim"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="620dp"
        android:text="Height"
        android:textColor="#B0B8BB"
        android:textSize="20sp"
        android:fontFamily="@font/aa"/>

    <EditText
        android:id="@+id/height"
        android:textColor="#282828"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="650dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:fontFamily="@font/aa"
        android:background="@drawable/edit_text_tasarim"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/resim6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#AEB6B9"
        app:strokeWidth="3dp"
        app:strokeColor="@color/white"
        android:src="@drawable/baseline_height_24"
        app:shapeAppearanceOverlay="@style/circular"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="650dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/resim5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#AEB6B9"
        app:strokeWidth="3dp"
        app:strokeColor="@color/white"
        android:src="@mipmap/weight"
        app:shapeAppearanceOverlay="@style/circular"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="550dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/resim7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:background="#AEB6B9"
        android:src="@drawable/man"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="220dp"
        android:text="Username"
        android:textSize="20sp"
        android:textColor="#B0B8BB"
        android:fontFamily="@font/aa"/>

    <Button
        android:id="@+id/updateprofile"
        android:textColor="#282828"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="730dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tasarim1"
        android:text="Update Profile"
        android:fontFamily="@font/aa"/>

</RelativeLayout>